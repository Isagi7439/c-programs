{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}", // Active file to compile
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe", // Output executable
                "-mconsole" // Ensure it's treated as a console app
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build task for C program."
        }
    ]
}
